    flex-wrap: wrap;
    border-bottom: 1px solid #999;
}
a,
button,
input,
select,
textarea {
    border: 2px solid transparent;
}

a:focus,
button:focus,
input:focus,
select:focus
textarea:focus {
    
}

li {
    list-style: none;
    margin: 0;
}

/*
    For .container, check also LGSCR for rule changes
*/

.section {
