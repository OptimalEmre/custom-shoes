    border-radius: .5rem;
    font-weight: 700;
    border-left: 0;
}

.button--collapsible::after {
    content: '\002B';
    position: absolute;
    right: .3em;
    top: .1em;
}

.button--collapsible--active,
.button--collapsible--active:active,
.button--collapsible--active:focus {
    font-weight: 700;
}

.button--collapsible--active:hover {
    border: 2px solid transparent;
    border-left: 0;
}

.button--collapsible--active::after {
    content: '\2212';
    position: absolute;
}

