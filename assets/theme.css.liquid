    -webkit-border-radius: 0 0 .5rem .5rem;
    -moz-border-radius: 0 0 .5rem .5rem;
    -ms-border-radius: 0 0 .5rem .5rem;
    -o-border-radius: 0 0 .5rem .5rem;
}


.button--collapsible,
.button--collapsible:active,
.button--collapsible:focus {
