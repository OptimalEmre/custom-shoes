    -webkit-border-radius: 100px;
    -moz-border-radius: 100px;
    -ms-border-radius: 100px;
    -o-border-radius: 100px;

    transition: all var(--transition--default-duration)
        var(--transition--default-timing-function);
    -webkit-transition: all var(--transition--default-duration)
        var(--transition--default-timing-function);
    -moz-transition: all var(--transition--default-duration)
        var(--transition--default-timing-function);
    -ms-transition: all var(--transition--default-duration)
        var(--transition--default-timing-function);
    -o-transition: all var(--transition--default-duration)
