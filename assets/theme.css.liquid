/*                      LARGE SCREEN SPECIFIC RULES                               */

/* ------------------------------------------------------------------------------ */
/* ------------------------------------------------------------------------------ */
@media only screen and (min-width: 1025px) {

    :root {
        --product-box-padding: 1vw;
        --collection-box-padding: 2vw;
        --product-box-gap: var(--default-side-padding);
        --product-box-width: calc(24vw - (var(--section-side-padding)) - var(--product-box-gap));
        --collection-box-width: calc(49vw - (var(--section-side-padding)) - var(--product-box-gap));
        --collection-frame-width: calc(var(--collection-box-width) - (var(--collection-box-padding) * 2));
        --collection-frame-height: calc((var(--collection-frame-width) / var(--default-aspect-ratio)) * 100);
        
    }

    /* Reusable Classes */

    .lg--fixed-width,
    .container {
        max-width: var(--max-page-width);
        margin: 0 auto;
    }

    .lg--fixed-width--secondary {
        max-width: var(--max-page-width--secondary);
        margin: 0 auto;
    }
    
    .lg--quarter-page-width {
        width: 24.5%;
    }
    /* End of Reusable Classes */

    .section-heading {
        font-size: 2rem;
    }

    .section-subheading {
        font-size: 1.3rem;
    }

    .header__logo {
        width: 15rem;
        padding: 1.5rem;
    }

    .navigation {
        flex-grow: 1;
    }

    .navigation__menu {
        display: inline-flex;
        margin-left: auto;
        margin-right: auto;
        padding-right: 10.5vw;
    }

    .footer__social_links {
        justify-content: center;
    }

    .discount-container {
        padding-bottom: 4rem;
    }

    .discount-banner {
        height: 100vh;
    }

    /* .small-pictures__image {
        width: 19vw;
        max-width: 370px;
        height: calc((19vw / var(--default-aspect-ratio)) * 100);
        max-height: 429px;
    } */

    .small-pictures__text-content {
        padding-left: 5rem;
        padding-right: 5rem;
        font-size: 1.2rem;
    }

    .frontpage-collection__product-heading,
    .collection__product-heading {
        font-size: 1.3rem;

    }

    /* testimonials */

    .testimonials__box {
        width: 33%;
        max-width: 25rem;
        margin-bottom: 0;
        padding: 2rem;
    }

    .testimonials__list {
        display: flex;
        width: 100%;
    }

    .testimonials__image {
        width: 8.5rem;
        height: 8.5rem;
        border: 6px solid var(--color--white);
    }

    .testimonials__content {
        font-size: 1.2rem;
    }

    .testimonials__name-title {
        margin-top: 1.3rem;
        font-size: 1rem;
    }

    .product__reviews {
        grid-template-columns: repeat( auto-fit, minmax(350px, 1fr));
    }
    .product__review-header {
        margin: 2rem auto;
    }

    /* collections page */

    .collection__box {
        width: var(--collection-box-width);
        padding-top: var(--collection-box-padding);
        padding-left: var(--collection-box-padding);
        padding-right: var(--collection-box-padding);
    }

    .collection__frame {
        width: var(--collection-frame-width);
        height: var(--collection-frame-height);
    }
}

@media only screen and (min-width: 1201px) {

    :root {
        --max-page-width--secondary: 1200px;
        --collection-box-width: calc((var(--max-page-width--secondary) / 2 - 2rem) - (var(--section-side-padding)) - var(--product-box-gap));
    }
    
    .header__container,
    .footer__container {
        max-width: 100%;
    }

    .fitting-guide__window {
        height: 992px;
    }

    .navigation__menu-link,
    .navigation__menu-link--active {
        font-size: 1.4rem;
        margin: 0 1.5rem;
    }

    
    /* dynamic sections */
    .carousel {
        max-height: 90vh;
    }

    .discount-banner__heading {
        font-size: 3rem;
    }
    .discount-banner__subheading {
        font-size: 2rem;
    }

    :root {
        --small-pictures-box-width: calc(35vw - (var(--default-side-padding) * 2));
    }

    /* frontpage */
    .frontpage-collection__product-heading {
        font-size: 1.5vw;
    }

    /* product details page */
    .product__main-images {
        width: 388px;
        height: calc((388px / var(--default-aspect-ratio)) * 100);
    }
       
}
