/*                      MEDIUM SIZED SCREEN SPECIFIC RULES                        */

/* ------------------------------------------------------------------------------ */
/* ------------------------------------------------------------------------------ */

@media only screen and (min-width: 550px) {
 
    :root {
        --section-side-padding: calc(var(--default-side-padding) * 2);
        --section-vertical-padding: calc(var(--default-vertical-padding) * 2);
        
    }

    .button--left > svg,
    .button--right > svg,
    .button--close > svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    /* Reusable Classes */
    .md--half-page-width {
        width: 49%;
    }

    .button--left,
    .button--right {
        display: block;
    }

    .fitting-guide__window {
        max-width: 736px;
        padding-left: 3rem;
        padding-right: 3rem;
    }

    .fitting-guide__description-wrapper {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-end;
    }
    /* End of Reusable Classes */

    .header__container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header__cart {
        display: block;
        position: relative;
        width: 2.4rem;
        height: 2.4rem;
        padding: .2rem;
    }

    .header__cart-count {
        display: grid;
        place-content: center;
        position: absolute;
        top: 2em;
        left: -.5em;
        width: 1.7em;
        height: 1.7em;
        padding: .3em;
        z-index: 9;
        border-radius: 50%;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        -ms-border-radius: 50%;
        -o-border-radius: 50%;
        background: var(--color--accent);
        color: var(--color--white);
        font-size: .7rem;
}

    .header__cart:hover {
        border: 2px solid transparent;
    }

    .header__cart > svg {
        transition: fill var(--transition--default-duration)
            var(--transition--default-timing-function);
        -webkit-transition: fill var(--transition--default-duration)
            var(--transition--default-timing-function);
        -moz-transition: fill var(--transition--default-duration)
            var(--transition--default-timing-function);
        -ms-transition: fill var(--transition--default-duration)
            var(--transition--default-timing-function);
        -o-transition: fill var(--transition--default-duration)
            var(--transition--default-timing-function);
    }

    .header__cart:hover > svg {
        fill: var(--color--accent);
    }

    /* navigation */
    .navigation {
        margin: 0 auto;
    }

    .navigation__menu-button,
    .navigation__close-button {
        display: none;
    }

    .navigation__menu {
        display: flex;
        align-items: center;
    }

    .navigation__menu-link,
    .navigation__menu-link--active {
        display: block;
        margin: 0 0.5rem;
        font-family: 'Roboto', Arial, sans-serif;
        font-size: 1.2rem;
        text-decoration: none;
        line-height: 2rem;
        color: var(--color--primary);
        border: 2px solid transparent;
        transition: color var(--transition--default-duration)
            var(--transition--default-timing-function);
        -webkit-transition: color var(--transition--default-duration)
            var(--transition--default-timing-function);
        -moz-transition: color var(--transition--default-duration)
            var(--transition--default-timing-function);
        -ms-transition: color var(--transition--default-duration)
            var(--transition--default-timing-function);
        -o-transition: color var(--transition--default-duration)
            var(--transition--default-timing-function);
    }

    .navigation__menu-link--active {
        text-decoration: underline;
    }

    .navigation__menu-link:hover {
        color: var(--color--accent);
        text-decoration: underline;
    }

    .footer__container {
        padding-top: 1rem;
        display: grid;
        grid-template-columns: 33% 33% 33%;
        grid-template-areas:
            "menu contact newsletter"
            "bottom bottom bottom";
        text-align: left;
    }

    .footer__menu {
        grid-area: menu;
    }

    .footer__contact {
        grid-area: contact;
        justify-content: center;
        text-align: center;
    }

    .footer__newsletter {
        grid-area: newsletter;
        max-width: 24rem;
        text-align: left;
        margin-left: auto;
    }

    .newsletter__input {
        display: block;
        margin-right: auto;
        width: 100%;
        margin-bottom: 0.2rem;
    }

    .footer__bottom {
        grid-area: bottom;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding: 3rem 3rem 1rem;
    }

    .footer__copyright {
        order: 1;
        margin-right: 1rem;
        font-size: 0.7rem;
    }

    .footer__bottom-link-list {
        order: 2;
        flex-direction: row;
        font-size: 0.7rem;
    }

    .footer__menu {
        margin-left: 2rem;
    }

    /* .footer__bottom {
        justify-content: flex-start;
        padding: 3rem 1rem 1rem;
    } */

    .footer__copyright {
        order: 1;
        display: flex;
    }

    .footer__bottom-link-list {
        order: 2;
    }

    .footer__bottom-link {
        padding: 0 1rem 0;
        border-left: 1px solid var(--color--white);
    }

    .footer__payment-icons {
        margin-top: 0;
        order: 3;
    }

    .footer__payment-icon-list {
        justify-content: flex-end;
    }

    /* dynamic sections */

    /* frontpage */

    .frontpage-collection {
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
    }

    .frontpage-collection_heading {
        width: 100%;
        margin-bottom: 1rem;
    }

    .frontpage-collection__product-box {
        margin-left: 1rem;
        margin-right: 1rem;
    }

    

   /* discount banner*/

    .discount-container {
        display: flex;
        padding-left: var(--section-side-padding);
        padding-right: var(--section-side-padding);
        padding-bottom: var(--section-vertical-padding);
    }

    .discount-banner__quality {
        display: grid;
        align-items: center;
        width: 50%;
    }

    .discount-banner__quality img {
        width: 90%;
    }

    .discount-banner {
        width: 50vw;
        height: 60vw;

    }

    /* small pictures section */

    .small-pictures__container {
        display: flex;
        padding: var(--section-vertical-padding) var(--section-side-padding);
    }

    :root {
        --small-pictures-box-width: calc(50vw - (var(--section-side-padding) * 2));
        --small-picture-margin: .5rem;
        --small-picture-width: calc(var(--small-pictures-box-width) / 2 - (var(--small-picture-margin) * 2));
        
    }

    .small-pictures__images {
        width: var(--small-pictures-box-width);
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        margin-top: auto;
        margin-bottom: auto;
    }

    .small-pictures__frame {
        width: var(--small-picture-width);
        height: calc((var(--small-picture-width) / var(--default-aspect-ratio)) * 100);
        margin: var(--small-picture-margin);
        padding: .8rem; */
    }
    .small-pictures__link {
        display: block;
    }

    .small-pictures__image {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* margin-left: auto;
        margin-right: auto; */
    }

    .small-pictures__text {
        display: flex;
        flex-direction: column;
        width: 50%;
        padding-left: var(--section-side-padding);
        padding-right: var(--section-side-padding);
    }

    .small-pictures__heading {
        margin-top: auto;
    }

    .small-pictures__text-content {
        margin-bottom: auto;
    }

    .collection__shopping-buttons {
        width: 70%;
    }
    
}

@media only screen and (min-width: 550px) and (max-width: 799px) {
    
    .sm--visually-hidden {
        display: none;
    }

    .footer__bottom {
        flex-wrap: wrap;
    }

    .footer__payment-icons {
        width: 100%;
        margin: 0 auto 0 0;
    }

    .footer__payment-icon-list {
        justify-content: left;
    }
}


@media only screen and (min-width: 800px) {
    :root {
        --product-box-padding: 2vw;
        --product-box-gap: var(--default-side-padding);
        --product-box-width: calc(50vw - (var(--section-side-padding)) - var(--product-box-gap));
    }

    .md--visually-hidden {
        visibility: hidden;
    }

    /* carousel */
    .carousel {
        max-height: 100vh;
    }

    .carousel__cta-header {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    /* .small-pictures__frame {
        padding: 1rem;
    } */

    /* Product page */
    .product__details {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 2rem;
    }

    .product__images {
        display: flex;
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        width: 45%;
    }

    .product__image-slide > img {
        border: 1px solid transparent;
    }

    .product__image-slide--active > img {
        border: 1px solid var(--color--dark-focus);
    }

    .product__indicator-navbars {
        display: none;
    }

    .product__information {
        width: 35%;
        padding-left: 2rem;
    }
    
    .product__main-images {
        width: 35vw;
        height: calc((35vw / var(--default-aspect-ratio)) * 100);
        margin-right: 1rem;
    }

    .product__thumbnails-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 25%;
    }

    .product__thumbnails {
        position: relative;
        display: block;
        width: 100%;
        
    }

    .product__image-slider {
        
        transition: transform 100ms var(--transition--default-timing-function);
        -webkit-transition: transform 100ms var(--transition--default-timing-function);
        -moz-transition: transform 100ms var(--transition--default-timing-function);
        -ms-transition: transform 100ms var(--transition--default-timing-function);
        -o-transition: transform 100ms var(--transition--default-timing-function);
    }

    .product__image-slide {
        /* height: 25%;
        max-width: 127px;
        max-height: 155px; */
        padding: .2rem .35rem;
        overflow: hidden;
        margin-left: auto;
    }

    .product__image-slide:first-child {
        padding-top: 0;
    }

    .product__description-text,
    .product__description-text--static {
        font-size: .9rem;
    }

    .product__shopping-buttons {
        /* margin-bottom: 2rem; */
    }

    .product__reviews {
        padding-left: 2rem;
        padding-right: 2rem;
    }

    /* Hide scrollbar for Chrome, Safari and Opera */
    
    .discount-container {
        padding-bottom: 4rem;
    }

    .collection__box {
        padding-bottom: 2rem;
    }
}

