/************************************************/

/**************** CSS VARIABLES ******************/

/************************************************/

:root {
    --max-page-width: 1920px;
    --max-page-width--secondary: 1200px;
    --sm-max-page-width: 400px;

    --default-side-padding: 1rem;
    --default-vertical-padding: 2rem;
    --section-side-padding: var(--default-side-padding);
    --section-vertical-padding: var(--default-vertical-padding);
    --default-aspect-ratio: 100;

    --color--primary: #191919;
    --color--secondary: #e5e5e5;
    --color--accent: #1075af;
    --color--accent-hover: #5abdf6;
    --color--white: #fff;
    --color--light-focus: #fff;
    --color--dark-focus: #000;
    --navigation--background-color: #191919;
    --default-box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.15);

    --transition--default-duration: 100ms;
    --transition--default-timing-function: ease-out;
}

/************************************************/

/***************** RESET RULES *******************/

/************************************************/

*,
*::before,
*::after {
    margin: 0;
    padding: 0;
    box-sizing: inherit;
}

/* Resetting default button styles */

button,
select,
button:hover {
    background: transparent;
    border: 0 solid transparent;
    text-shadow: 0 0 0 transparent;
    cursor: pointer;
}

button:active,
select:active {
    outline: none;
    border: none;
}

button:focus,
select:focus {
    outline: none;
}

button::-moz-focus-inner,
link::-moz-focus-inner {
    /* removes the dotted button inner outline in Firefox */
    outline: none;
}

