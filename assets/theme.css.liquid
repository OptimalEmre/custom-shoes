.button--up,
.button--down,
.button--up:hover,
.button--down:hover {
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 2;
    border: 2px solid transparent;
    transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -webkit-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -moz-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -ms-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -o-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
