}


/* Standard left and right buttons for slider modules */

.button--left,
.button--right,
.button--left:hover,
.button--right:hover {
    position: absolute;
    bottom: 1rem;
    display: grid;
    place-content: center;
    padding: 0.1rem;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 2;
    border: 2px solid transparent;
    transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -webkit-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -moz-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -ms-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    -o-transition: all var(--transition--default-duration) var(--transition--default-timing-function);
    opacity: .4;
}

.button--left {
    display: inline-block;
    left: 0;
    margin-left: 0.3rem;
}

.button--right {
    display: inline-block;
    right: 0;
    margin-right: 0.3rem;
}

.button--left:hover,
.button--right:hover {
    background-color: rgba(0, 0, 0, 0.8);
    box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.8);
}

.button--left > svg,
.button--right > svg,
.button--close > svg {
    display: block;
    width: 1rem;
    height: 1rem;
    fill: #fff;
}

.button--close > svg {
    width: 1.7rem;
    height: 1.7rem;
}

.button--up:disabled,
.button--down:disabled,
.button--left:disabled,
.button--right:disabled,
.button--up:disabled:hover,
.button--down:disabled:hover,
.button--left:disabled:hover,
.button--right:disabled:hover,
.button--up:disabled:focus,
.button--down:disabled:focus,
.button--left:disabled:focus,
.button--right:disabled:focus {
