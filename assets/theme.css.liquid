    display: inline-flex;
    position: relative;
    margin-left: 1rem;
    z-index: 100;
}

.fitting-guide__button {
    display: inline-block;
    position: relative;
    font-size: 0.8rem;
    border-bottom: 2px solid transparent;
    transition: color var(--transition--default-duration) var(--transition--default-timing-function) ;
    -webkit-transition: color var(--transition--default-duration) var(--transition--default-timing-function) ;
    -moz-transition: color var(--transition--default-duration) var(--transition--default-timing-function) ;
