<!doctype html>
<html>
    <head>
        <title>{{ page_title }}</title>
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta name="description" content="{{ page_description | escape }}">
        <link rel="canonical" href="{{ canonical_url }}">
        <meta content="width=device-width,initial-scale=1,shrink-to-fit=no" name="viewport">
        {% if settings.favicon != blank %}
            <link rel="apple-touch-icon" sizes="57x57" href="{{settings.favicon | img_url: '57x'}}">
            <link rel="apple-touch-icon" sizes="60x60" href="{{settings.favicon | img_url: '60x'}}">
            <link rel="apple-touch-icon" sizes="72x72" href="{{settings.favicon | img_url: '72x'}}">
            <link rel="apple-touch-icon" sizes="76x76" href="{{settings.favicon | img_url: '76x'}}">
            <link rel="apple-touch-icon" sizes="114x114" href="{{settings.favicon | img_url: '114x'}}">
            <link rel="apple-touch-icon" sizes="120x120" href="{{settings.favicon | img_url: '120x'}}">
            <link rel="apple-touch-icon" sizes="144x144" href="{{settings.favicon | img_url: '144x'}}">
            <link rel="apple-touch-icon" sizes="152x152" href="{{settings.favicon | img_url: '152x'}}">
            <link rel="apple-touch-icon" sizes="180x180" href="{{settings.favicon | img_url: '180x'}}">
            <link rel="icon" type="image/png" sizes="192x192"  href="{{settings.favicon | img_url: '192x'}}">
            <link rel="icon" type="image/png" sizes="32x32" href="{{settings.favicon | img_url: '32x'}}">
            <link rel="icon" type="image/png" sizes="96x96" href="{{settings.favicon | img_url: '96x'}}">
            <link rel="icon" type="image/png" sizes="16x16" href="{{settings.favicon | img_url: '16x'}}">  
        {% endif %}
        {{ content_for_header }}
        <!-- Header hook for plugins -->
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,700;1,300&display=swap" rel="stylesheet">
        {{ 'theme.css' | asset_url | stylesheet_tag }}
    </head>
    <body>
        <a class="screen-reader-only skip-link" href="#main-content">Skip to main content</a>
        {% if template == "index" %}
            <a class="screen-reader-only skip-link" href="#footer">Skip to footer</a>   
        {% endif %}
                
        {% section 'header' %}

        <main id="main-content" role="main">
            {{ content_for_layout }}
        </main>

        {% section 'footer' %}

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script rel="preload" src="{{ 'lazysizes.min.js' | asset_url }}" type="text/javascript"></script>
        <script rel="preload" src="{{ 'smoothscroll.min.js' | asset_url }}" type="text/javascript"></script>
        <script rel="preload" src="{{ 'scripts.min.js' | asset_url }}" type="text/javascript"></script>




    </body>
</html>
